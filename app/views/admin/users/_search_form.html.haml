.user-actions
  %h2 Find Customers
  
  #search-customers
    = form_tag search_admin_users_path, method: :get do
      .field
        = label_tag 'user_name', 'Name'
        = text_field_tag 'user[name]', (params[:user] ? params[:user][:name] : '')
      
      .field
        = label_tag 'user_phone', 'Phone Number'
        = text_field_tag 'user[phone]', (params[:user] ? params[:user][:phone] : '')
        
      .field
        = label_tag 'user_email', 'Email'
        = text_field_tag 'user[email]', (params[:user] ? params[:user][:email] : '')
      
      .field
        = label_tag 'user_address_address_1', 'Address 1'
        = text_field_tag 'user[address][address_1]', ((params[:user] && params[:user][:address]) ? params[:user][:address][:address_1] : '')
        
      .field
        = label_tag 'user_address_address_2', 'Address 2'
        = text_field_tag 'user[address][address_2]', ((params[:user] && params[:user][:address]) ? params[:user][:address][:address_2] : '')
        
      .field
        = label_tag 'user_address_city', 'City'
        = text_field_tag 'user[address][city]', ((params[:user] && params[:user][:address]) ? params[:user][:address][:city] : '')
        
      .field
        = label_tag 'user_address_province', 'State / Province'
        = text_field_tag 'user[address][province]', ((params[:user] && params[:user][:address]) ? params[:user][:address][:province] : '')
        
      .field
        = label_tag 'user_address_postal_code', 'Zip Code / Postal Code'
        = text_field_tag 'user[address][postal_code]', ((params[:user] && params[:user][:address]) ? params[:user][:address][:postal_code] : '')
        
      .field
        = label_tag 'user_address_country', 'Country'
        = text_field_tag 'user[address][country]', ((params[:user] && params[:user][:address]) ? params[:user][:address][:country] : '')
        
      .field
        - new_user_href = (params[:user] ? new_admin_user_path(user: params[:user]) : new_admin_user_path)
        = link_to 'Create a new user', new_user_href
        = submit_tag 'search', :class => 'button submit'
.clear &nbsp;
