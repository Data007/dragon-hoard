- content_for :page_title do
  %h1 #{@order.location.capitalize} #{@order.staging_type.capitalize} ##{@order.pretty_id}

- content_for :page_actions do
  - if @order.refunded
    %h2 REFUNDED
  - else
    .button= link_to 'refund order', refund_admin_user_order_path(@user.pretty_id, @order.pretty_id), id: "refund-order-button", confirm: "Are you sure you want to REFUND this order?"
    .button= link_to 'cancel order', cancel_admin_user_order_path(@user.pretty_id, @order.pretty_id), id: "cancel-order-button", confirm: "Are you sure you want to CANCEL this order?"

- content_for :extra_js do
  = render partial: "admin/users/orders/extra_javascript"

= render partial: "admin/users/orders/menu", locals: {active_url: admin_user_order_path(@user.pretty_id, @order.pretty_id)}

= form_for @order, url: admin_user_order_path(@user.pretty_id, @order.pretty_id), html: {method: :put} do |order_form|
  .field
    = order_form.label :clerk_id, "Handled by: "
    = order_form.select :clerk_id, options_from_collection_for_select(User.workers, "id", "name", @order.clerk_id ? @order.clerk_id : @current_user.id)
  .field
    = order_form.submit "change clerk", class: "button submit"
  
%hr

%h2 Shipping address

= form_for @order, url: admin_user_order_path(@user.pretty_id, @order.pretty_id), html: {method: :put} do |order_form|
  = order_form.fields_for :address do |address_form|
    .field.required
      = address_form.label       :address_1
      = address_form.text_field  :address_1
    .field
      = address_form.label       :address_2
      = address_form.text_field  :address_2
    .field.required
      = address_form.label       :city
      = address_form.text_field  :city
    .field.required
      = address_form.label       :province
      = address_form.text_field  :province
    .field.required
      = address_form.label       :postal_code, 'State or Province'
      = address_form.text_field  :postal_code
    .field.required
      = address_form.label       :country
      = address_form.text_field  :country
  .field
    = order_form.submit 'save shipping address', class: 'button submit'

%hr

= render partial: "admin/users/orders/items"

%hr

= render partial: "admin/users/orders/payments"

%hr

= render partial: "admin/users/orders/notes"
