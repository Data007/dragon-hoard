- if line_item.refunded
  %tr.line_item
    %td{:valign => "top"} &nbsp;
    %td{:valign => "top", :nowrap => "nowrap"}
      = line_item.quick_id
    %td{:valign => "top"}
      = line_item.name
      = line_item.description
    %td{:valign => "top"}
      = line_item.size
    %td.taxable{:valign => "top"}
      = line_item.taxable
    %td.quantity{:valign => "top"}
      = line_item.quantity
    %td.price{:valign => "top"}
      = line_item.price
      = hidden_field_tag "order[line_items][][id]", line_item.id
    %td.refunded{:valign => "top"}= line_item.refunded ? "REFUNDED" : ""
    %td.total{:valign => "top"}= number_to_currency(line_item.total)
    
- else
  %tr.line_item
    %td{:valign => "top"}
      - if @order.payments.length > 0 && @order.balance > 0
        = raw link_to "refund", admin_order_line_item_path(:id => line_item.id, :order_id => @order.id, :refund => true), :method => :delete, :confirm => "Are you sure you want to REFUND #{line_item.name} from the order?"
      - else
        = raw link_to "remove", admin_order_line_item_path(:id => line_item.id, :order_id => @order.id), :method => :delete, :confirm => "Are you sure you want to REMOVE #{line_item.name} from the order?"
    %td{:valign => "top", :nowrap => "nowrap"}
      = text_field_tag "order[line_items][][quick_id]", line_item.quick_id, :size => "5px"
    %td{:valign => "top"}
      = text_area_tag "order[line_items][][name]", line_item.name
      = text_area_tag "order[line_items][][description]", line_item.description
    %td{:valign => "top"}
      = text_field_tag "order[line_items][][size]", line_item.size
    %td.taxable{:valign => "top"}
      = check_box_tag("order[line_items][][taxable]", line_item.taxable, line_item.taxable)
    %td.quantity{:valign => "top"}
      = text_field_tag("order[line_items][][quantity]", line_item.quantity)
    %td.price{:valign => "top"}
      = text_field_tag "order[line_items][][price]", line_item.price
      = hidden_field_tag "order[line_items][][id]", line_item.id
    %td.refunded{:valign => "top"}= line_item.refunded ? "REFUNDED" : ""
    %td.total{:valign => "top"}= number_to_currency(line_item.total)
