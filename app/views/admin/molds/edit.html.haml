- content_for :page_title do
  %h1 Editing Mold #{@mold.custom_id == nil ? @mold.id : @mold.id.to_s + "/" + @mold.custom_id}
  
- content_for :page_actions do
  = button_for_url "cancel", admin_mold_path(@mold.id), :class => "button"
  
- content_for :page_content do
  - form_for :mold, @mold, :url => admin_mold_path(@mold.id), :html => { :method => :put, :multipart => true } do |mold|
    = render :partial => "admin/molds/form", :locals => {:mold => mold}