- content_for :page_title do
  %h1 Create a new mold
  
- content_for :page_actions do
  = button_for_url "cancel", cancel_admin_mold_path(@mold.id), :class => "button"
  
- content_for :page_content do
  - form_for :mold, @mold, :url => admin_molds_path, :html => { :method => :post, :multipart => true } do |mold|
    = render :partial => "admin/molds/form", :locals => {:mold => mold}