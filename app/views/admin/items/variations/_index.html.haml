.images
  - item.variations.active.each do |variation|
    .image
      .actions
        = link_to "edit", edit_admin_item_variation_path(item.pretty_id, variation.pretty_id)
        = link_to "delete", admin_item_variation_path(item.pretty_id, variation.pretty_id), method: :delete, class: "delete"
      - image = variation.assets.length > 0 && variation.assets.first.image_file_name != nil ? variation.assets.first.image.url(:manage) : "/images/ui/no_image.jpg"
      = link_to image_tag(image), edit_admin_item_variation_path(item.pretty_id, variation.pretty_id)
      .item_id
        ID#{@item.pretty_id}-#{variation.pretty_id}
        -if @item.custom_id && variation.custom_id
          |
          OID#{@item.custom_id}-#{variation.custom_id}
