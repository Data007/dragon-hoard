- content_for :page_title do
  %h1
    Editing
    #{@item.name} (#{@item.custom_id.present? ? "ID#{@item.pretty_id} | OID#{@item.custom_id}" : "ID#{@item.pretty_id}"})
  
- content_for :page_content do
  - form_for :item, @item, :url => admin_item_path(@item.pretty_id), :html => { :method => :put, :multipart => true } do |item|
    = render :partial => "admin/items/form", :locals => {:item => item}
