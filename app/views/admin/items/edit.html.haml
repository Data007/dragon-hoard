- content_for :page_title do
  %h1
    Editing
    = "#{@item.name} (##{@item.id})"
  
- content_for :page_content do
  - form_for :item, @item, :url => admin_item_path(@item), :html => { :method => :put, :multipart => true } do |item|
    = render :partial => "admin/items/form", :locals => {:item => item}