- content_for :page_title do
  - if @title
    %h1= @title
  - else
    %h1 Listing Items
  
-content_for :page_actions do
  = raw button_for_url "create a new item", new_admin_item_path, class: "button"
  
- content_for :page_content do
  - if @items.empty?
    %p No items were found.
  -else
    = will_paginate(@items, :params => {:search => {:query => @query}})
    = render partial: "admin/items/summary", collection: @items
    = will_paginate(@items, :params => {:search => {:query => @query}})
