- item = summary

.item.container
  .item_actions
    #{link_to "Edit", edit_admin_item_path(item.pretty_id)} |
    #{link_to (item.custom_id.present? ? "ID#{item.pretty_id} | OID#{item.custom_id}" : "ID#{item.pretty_id}"), admin_item_path(item.pretty_id)}
    %span (#{pluralize(item.variations.length, "variation")})
  .item_header
    .name= link_to (item.name ? item.name : "this item needs a name"), admin_item_path(item.pretty_id)

  .item_body.content
    - if item.variations.active.length > 0
      - asset = item.variations.active.first.assets.by_position.compact.first
      - if asset
        = link_to(image_tag(asset.image.url(:manage)), admin_item_path(item.pretty_id))
      - else
        = link_to(image_tag("/images/ui/no_image.jpg"), admin_item_path(item.pretty_id))
    - else
      = link_to(image_tag("/images/ui/no_image.jpg"), admin_item_path(item.pretty_id))
    .statuses
      - if item.published
        .published= link_to "On the Web", published_admin_items_path
      -elsif !item.published
        .instore= link_to "Not on the Web", instore_admin_items_path
      - if item.one_of_a_kind
        .one_of_a_kind= link_to "One of a Kind", ooak_admin_items_path
      / - if item.archived
      /   .zombie= link_to "No Longer Available", old_admin_items_path
      - unless item.available
        .not_available= link_to "Sold", old_admin_items_path
    .collections
      - item.collections.each do |collection|
        = link_to collection.name, admin_collection_path(collection)
