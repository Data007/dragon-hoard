.collection
  %h2.name= link_to "The #{@collection.name} Collection", collection_path(@collection)
  .description
    :markdown
      #{@collection.description}
  - @collection.items.the_living.published.each do |item|
        
    .item{:id => "item_#{item}"}
      .thumbnail= link_to(image_tag(item.variations.the_living.first.assets.by_position.first.image.url(:medium)), item_path(item))
      .meta_data
        .name= link_to truncate(item.name, 45, "..."), item_path(item)