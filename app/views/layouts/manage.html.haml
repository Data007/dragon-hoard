!!! 5
%html(lang='en' ng-app='manage')
  %head
    %meta{charset: "utf-8"}
    %meta{:'http-equiv' => "X-UA-Compatible", content: "IE=Edge,chrome=1"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %link{rel: "image_src", href: "#{yield :image_src}"}
    %title Manage

    = csrf_meta_tags

  %body
    #header
      = link_to image_tag('manage-logo-white.png'), root_path, class: 'brand'
      %form
        %input{type: 'text', placeholder: 'Search'}
      %ul#top-menu
        %li= link_to 'Administration', '#/home', :'ng-click' => 'clearSession ()'
      %ul#bottom-menu
        %li= link_to 'Home', '#/home', :'ng-click' => 'clearSession ()'
        %li= link_to 'Sale', '#/sales/new'

    .selector click me!
    #main
      #left-sidebar
        left sidebar
      #content
        - if flash.present?
          %section
            - flash.each do |(key, value)|
              = content_tag :article, raw(value), class: 'message', id: "#{key}-message"
        #body
          = yield
      #right-sidebar
        right sidebar

    = javascript_include_tag 'manage'
    :javascript
      var app = new DragonsBreath;
