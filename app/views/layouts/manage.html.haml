!!! 5
%html(lang="en")
  %head
    %meta{charset: "utf-8"}
    %meta{:'http-equiv' => "X-UA-Compatible", content: "IE=Edge,chrome=1"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %link{rel: "image_src", href: "#{yield :image_src}"}
    %title Manage #{yield :page_title}

    = csrf_meta_tags

    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"

    = stylesheet_link_tag 'manage', media: 'all'
    = javascript_include_tag 'manage', media: 'all'

  %body
    %header
      %ul
        %li#logo logo
        %li#search search
        %li#advanced-options admin
      %ul
        %li= link_to 'Home', '/manage'
        %li= link_to 'Sale'

    %section
      %nav
        left sidebar
      %article
        %section
          %nav
            lefty
          %article
            centy
          %aside
            righty
        centered content
        - if flash.present?
          %section
            - flash.each do |(key, value)|
              = content_tag :article, raw(value), class: 'message', id: "#{key}-message"
        %section= yield
      %aside
        right sidebar
